<!-- 3.自定义组件传递数据/传递样式 -->
<my-prop title="哈哈哈" titleclass="red"/>
<my-prop title="呵呵呵" titleclass="blue"/>
<my-prop titleclass="green"/>

<!-- 4.自定义事件 -->
<view>{{counter}}</view>
<my-event bind:increment="handleIncrement"/>

<!-- 5.tab-control组件的实现 -->
<w-tab-control titles="{{['衣服','裤子','鞋子']}}"
               bind:itemclick="handleTabClick"/>

<view>---------------------------------------------------</view>
<!-- 6. 直接选中组件修改数据/调用方法-->
<button size="mini" bind:tap="handleCpn">修改组件内的数据</button>
<my-sel id="sel-id"/>
<text>---------------------------</text>
<!-- 7.slot: 插槽的使用 -->
<my-slot>
  <button size="mini">我是组件的按钮</button>
</my-slot>
<!-- 7.2多个插槽的使用 -->
<!-- 
  注意事项：
    1.给每一个插槽起名字，name属性
    2.必须在  Component对象中添加一个选项：options：multipleSlots: true
 -->
 <button bind:tap="handleView">切换显示</button>
 <block wx:if="{{isShow}}">
  <my-mslot>
    <button size="mini" slot="slot2">我是mslot组件的按钮</button>
    <slider slot="slot1"></slider>
    <text slot="slot3">哈哈哈</text>
  </my-mslot>
</block>
